<?xml version="1.0" encoding="ISO-8859-1" ?>

<!DOCTYPE struts-config PUBLIC
          "-//Apache Software Foundation//DTD Struts Configuration 1.1//EN"
          "http://jakarta.apache.org/struts/dtds/struts-config_1_3.dtd">

<struts-config>

	<!-- ========== Formulaire ============================== -->
	<form-beans>
		<form-bean name="gameForm" type="com.tutorial.struts.bean.form.GameForm">
			<form-property name="gameId" 		type="java.lang.String" />
			<form-property name="gameName" 		type="java.lang.String" />
			<form-property name="devName" 		type="java.lang.String" />
			<form-property name="countryName" 	type="java.lang.String" />
		</form-bean>
	 </form-beans>
	 
	<!-- ========== Mapping des actions ============================== -->
	<action-mappings>
	
		<!-- Save a new game -->
		<action path = "/saveGame" 
				name      = "gameForm"
            	type      = "com.tutorial.struts.action.save.game.SaveGameAction"
            	scope     = "request"
            	attribute = "bean">
			<forward name="success" path="/displayGameList.do"  />
			<forward name="error" path="/jsp/error.jsp"  />
		</action>
		
	    <!--  Game Add -->
	    <action path	 = "/deleteGame" 
	    		name     = "gameForm"
	    		type	 = "com.tutorial.struts.action.save.game.DeleteGameAction" 
	    		scope	 = "request"
            	attribute = "bean">
	        <forward name="success" path="/displayGameList.do"  />
	    </action>

		<!-- Delete a new game -->
<!-- 		<action path = "/deleteGame"  -->
<!-- 				name      = "deleteGameForm" -->
<!--             	type      = "com.tutorial.struts.action.save.game.SaveGameAction" -->
<!--             	scope     = "request" -->
<!--             	attribute = "bean"> -->
<!-- 			<forward name="success" path="/displayGameList.do"  /> -->
<!-- 			<forward name="error" path="/jsp/error.jsp"  /> -->
<!-- 		</action> -->
    
	</action-mappings>

</struts-config>