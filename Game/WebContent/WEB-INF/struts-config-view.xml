<?xml version="1.0" encoding="ISO-8859-1" ?>

<!DOCTYPE struts-config PUBLIC
          "-//Apache Software Foundation//DTD Struts Configuration 1.1//EN"
          "http://jakarta.apache.org/struts/dtds/struts-config_1_3.dtd">

<struts-config>

  <!-- ========== Mapping des actions ============================== -->
  <action-mappings>

	<!--  Game List -->
    <action path = "/displayGameList" type="com.tutorial.struts.action.view.game.DisplayGameListAction" scope="request">
        <forward name="success" path="/jsp/gameList.jsp"  />
        <forward name="error" path="/jsp/error.jsp"  />
    </action>
    
    <!--  Game Add -->
    <action path = "/displayGameSave" type="com.tutorial.struts.action.view.game.DisplayGameSaveAction" scope="request">
        <forward name="success" path="/jsp/gameAdd.jsp"  />
    </action>
    
  </action-mappings>

</struts-config>