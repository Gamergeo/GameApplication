<!DOCTYPE struts PUBLIC 
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

    <include file="struts-view.xml"/>
    <include file="struts-save.xml"/>
   
    <!-- Configuration for the default package. -->
    <package name="default" extends="struts-default">
    
        <interceptors>
        	<interceptor name="exception" class="com.tutorial.struts.interceptor.ExceptionInterceptor"></interceptor>
        
	        <interceptor-stack name="default-interceptors">
	            <interceptor-ref name="exception"/>
	       </interceptor-stack>
	    </interceptors>
	 
	    <default-interceptor-ref name="default-interceptors"/>
    </package>

</struts>