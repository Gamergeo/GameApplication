<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

	<!--  Visualisation de jeu - List et Save (namespace si besoin de namespace) -->
    <package name="com.tutorial.struts.action.view.game" extends="default">
    
    
	    <action name="displayGameList" class="com.tutorial.struts.action.view.game.DisplayGameListAction">
            <result name="success">/jsp/gameList.jsp</result>
            <result name="error">/jsp/error.jsp</result>
        </action>
        
        <action name="displayGameSave" class="com.tutorial.struts.action.view.game.DisplayGameSaveAction">
            <result name="success">/jsp/gameAdd.jsp</result>
        </action>
    </package>
</struts>