<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	 <modelVersion>4.0.0</modelVersion>
	
	<parent>
	    <groupId>com.tutorial</groupId>
	    <artifactId>game</artifactId>
	    <version>${revision}</version>
	</parent>
	<artifactId>game-webapp</artifactId>
  	<packaging>war</packaging>
	
	<name>game-webapp</name>
	
	<profiles>
        <!-- Profil pour l'environnement de dev -->
        <profile>
            <id>dev</id>
			<properties>
				<environment>dev</environment>
<!-- 				<filter.properties>src/main/resources/conf-dev/dev.properties</filter.properties> -->
			</properties>
            <build>
                <resources>
                    <resource>
                    	<filtering>true</filtering>
                        <directory>src/main/resources</directory>
                        <excludes>
                        	<exclude>conf-prod/*.*</exclude>
                        </excludes>
                         <includes>
                        	<include>*.*</include>
                        	<include>conf-dev/*.*</include>
                        	<include>labelResources/*.*</include>
                        </includes>
                    </resource>
                </resources>
            </build>
        </profile>
        <!-- Profil pour l'environnement de production -->
        <profile>
            <id>prod</id>
			<properties>
				<environment>prod</environment>
<!-- 				<filter.properties>src/main/resources/conf-prod/prod.properties</filter.properties> -->
			</properties>
            <build>
                <resources>
                    <resource>
                    	<filtering>true</filtering>
                        <directory>src/main/resources</directory>
                        <excludes>
                        	<exclude>conf-dev/*.*</exclude>
                        </excludes>
                         <includes>
                        	<include>*.*</include>
                        	<include>conf-prod/*.*</include>
                        	<include>labelResources/*.*</include>
                        </includes>
                    </resource>
                </resources>
            </build>
        </profile>
    </profiles>
	
	<build>
    	<finalName>game</finalName>
		<sourceDirectory>src/main/java</sourceDirectory>
		<resources>
			<resource>
				<directory>src/main/resources/global</directory>
			</resource>
		</resources>
		<plugins>
    		<plugin>
	    		<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-enforcer-plugin</artifactId>
	    	</plugin>
  		</plugins>
	</build>
	
	<dependencies>
		
		<!--  Project dependency -->
		<dependency>
            <groupId>com.tutorial</groupId>
            <artifactId>game-business</artifactId>
        </dependency>
        <dependency>
            <groupId>com.tutorial</groupId>
            <artifactId>game-model</artifactId>
        </dependency>
        <dependency>
            <groupId>com.tutorial</groupId>
            <artifactId>game-technical</artifactId>
        </dependency>
        
     	<!-- java servlet --> 
		<!-- https://mvnrepository.com/artifact/javax.servlet/javax.servlet-api -->
		<dependency>
		    <groupId>javax.servlet</groupId>
		    <artifactId>javax.servlet-api</artifactId>
		    <scope>provided</scope>
		</dependency>
		
		<dependency>
		    <groupId>org.ow2.asm</groupId>
		    <artifactId>asm-commons</artifactId>
		</dependency>
        
     	<!-- Struts -->
		<!-- https://mvnrepository.com/artifact/org.apache.struts/struts2-core -->
		<dependency>
		    <groupId>org.apache.struts</groupId>
		    <artifactId>struts2-core</artifactId>
		</dependency>
		<!-- https://mvnrepository.com/artifact/org.apache.struts/struts2-convention-plugin -->
		<dependency>
		    <groupId>org.apache.struts</groupId>
		    <artifactId>struts2-convention-plugin</artifactId>
		    <exclusions>
		    	<exclusion>
		    		<groupId>org.springframework</groupId>
	                <artifactId>*</artifactId>
		    	</exclusion>
		    </exclusions>
		</dependency>
					
		<!-- Struts spring -->
		<dependency>
		    <groupId>org.apache.struts</groupId>
		    <artifactId>struts2-spring-plugin</artifactId>
		</dependency>
		
		<!-- https://mvnrepository.com/artifact/jstl/jstl -->
		<!--  Tag du type ${ } -->
		<dependency>
		    <groupId>jstl</groupId>
		    <artifactId>jstl</artifactId>
		</dependency>
		
		<!-- Spring -->
		<dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-web</artifactId>
        </dependency>
        
		<!-- Aspect J -->
        <dependency>
		    <groupId>org.aspectj</groupId>
		    <artifactId>aspectjrt</artifactId>
		</dependency>
        <dependency>
		    <groupId>org.aspectj</groupId>
		    <artifactId>aspectjweaver</artifactId>
		</dependency>
        
     	<dependency>
	    	<groupId>org.apache.commons</groupId>
	    	<artifactId>commons-dbcp2</artifactId>
	    </dependency>
	    
 		<!-- https://mvnrepository.com/artifact/mysql/mysql-connector-java -->
		<dependency>
		    <groupId>mysql</groupId>
		    <artifactId>mysql-connector-java</artifactId>
		</dependency>
		
		<!-- Aspect J -->
        <dependency>
		    <groupId>org.aspectj</groupId>
		    <artifactId>aspectjrt</artifactId>
		</dependency>
	</dependencies>
</project>
